<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="46dp"
            android:layout_height="32dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="56dp"
            android:translationZ="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_borsch" />

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:text="Борщ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button5"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="Цезарь"
            app:layout_constraintEnd_toEndOf="@+id/button4"
            app:layout_constraintStart_toStartOf="@+id/button4"
            tools:layout_editor_absoluteY="100dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="Спагетти"
            app:layout_constraintEnd_toEndOf="@+id/button5"
            app:layout_constraintStart_toStartOf="@+id/button5"
            tools:layout_editor_absoluteY="152dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="Блинчики"
            app:layout_constraintEnd_toEndOf="@+id/button6"
            app:layout_constraintStart_toStartOf="@+id/button6"
            tools:layout_editor_absoluteY="208dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="Мол. Коктейль"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            tools:layout_editor_absoluteX="24dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:translationZ="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.287"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_cesar"
            tools:layout_editor_absoluteY="110dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="33dp"
            android:layout_height="27dp"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="128dp"
            android:translationZ="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_spagetti" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="35dp"
            android:layout_height="29dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="13dp"
            android:translationZ="90dp"
            app:layout_constraintBottom_toTopOf="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:srcCompat="@drawable/ic_blinchik"
            tools:layout_editor_absoluteX="50dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_marginTop="3dp"
            android:translationZ="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            app:srcCompat="@drawable/ic_milkshake"
            tools:layout_editor_absoluteX="39dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

